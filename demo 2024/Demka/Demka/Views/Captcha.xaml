<Page x:Class="Demka.Views.Captcha"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demka.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Captcha">

    <Grid>
        <Rectangle Fill="#FFEBEBEB" Height="300" Width="300"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Margin="0, 50">
                <Canvas x:Name="canvas" Height="150" Width="250" HorizontalAlignment="Center"></Canvas>
                <StackPanel x:Name="Stack" Orientation="Horizontal" HorizontalAlignment="Center"></StackPanel>
            </StackPanel>
            <TextBox x:Name="tbCaptcha" Height="20" Width="100" Margin="5"/>
            <Button Content="Проверить" Width="100" x:Name="bGenerate" Click="bGenerate_Click"/>
        </StackPanel>
    </Grid>
</Page>
