<Window x:Class="Demo3.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo3.Views"
        mc:Ignorable="d"
        Title="ООО Украшение. Окно администратора" Height="450" Width="900" Icon="C:\Users\Я\source\repos\Demo3\Demo3\Resources\icon.ico" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FFFFCC97" Grid.Row="0" Grid.RowSpan="2"/>
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
            <Image Source="C:\Users\Я\source\repos\Demo3\Demo3\Resources\logo.png"/>
            <TextBlock Text="OOO Украшение" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
        </StackPanel>
        <Button x:Name="bBack" Content="Назад" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,10,0,0" Click="bBack_Click"/>
        <TextBlock x:Name="tbNameUser" Grid.Row="1" FontSize="16" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,5,0"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Bottom">
            <TextBlock Text="Поиск: "/>
            <TextBox x:Name="tbSearch" Width="160" TextChanged="tbSearch_TextChanged"/>
            <TextBlock Text="Фильтрация: " Margin="15,0,0,0"/>
            <ComboBox x:Name="cbFilter" Width="160" SelectionChanged="cbFilter_SelectionChanged"/>
            <TextBlock Text="Сортировка: " Margin="15,0,0,0"/>
            <ComboBox x:Name="cbSort" Width="160" SelectionChanged="cbSort_SelectionChanged"/>
            <Button x:Name="bAdd" Content="Добавить продукт" Margin="10,0,0,0" Click="bAdd_Click"/>
        </StackPanel>
        <DataGrid x:Name="dgProduct" Grid.Row="2" AutoGenerateColumns="False" SelectionMode="Single" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdProduct}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Название" Binding="{Binding NameProduct}"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding CostProduct}"/>
                <DataGridTextColumn Header="Действующая скидка" Binding="{Binding NowDicount}"/>
                <DataGridTextColumn Header="Производитель" Binding="{Binding IdManufacterNavigation.NameManufacter}"/>
                <DataGridTextColumn Header="Поставщик" Binding="{Binding IdSupplierNavigation.NameSupplier}"/>
                <DataGridTextColumn Header="Категория товара" Binding="{Binding IdCategoryNavigation.NameCategory}"/>
                <DataGridTextColumn Header="Количество на складе" Binding="{Binding CountProduct}"/>
                <DataGridTemplateColumn Header="Действие">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="bEdit" Content="Изменить" Click="bEdit_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
